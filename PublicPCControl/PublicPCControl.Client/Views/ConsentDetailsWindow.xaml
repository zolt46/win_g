<!-- File: PublicPCControl.Client/Views/ConsentDetailsWindow.xaml -->
<Window x:Class="PublicPCControl.Client.Views.ConsentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PC 사용 기록 동의" Height="480" Width="540"
        WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize"
        WindowStyle="ToolWindow" Background="#0f1625">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Background="#121c2f" BorderBrush="#24385c" BorderThickness="1" CornerRadius="12" Padding="14">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="공공 PC 사용 기록 수집 및 이용에 대한 동의" Foreground="#f2f6ff" FontSize="20" FontWeight="Bold" Margin="0,0,0,12" />
                    <TextBlock Text="본 동의서는 공용 PC 이용자의 활동 내역을 안전하게 관리하고, 이용 목적에 맞게 기기 사용을 관리하기 위해 작성되었습니다." Foreground="#d5e1ff" TextWrapping="Wrap" Margin="0,0,0,10" />

                    <TextBlock Text="1. 수집 항목 및 목적" Foreground="#c6dbff" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,4" />
                    <TextBlock Text="이용자 이름, 연락용 ID, 이용 목적, 이용 시간, PC 사용 중 실행한 프로그램 및 창 전환 기록이 수집됩니다. 수집 목적은 사용 현황 파악, 보안 사고 대응, 기기 이용 관리 및 서비스 개선입니다." Foreground="#dbe6ff" TextWrapping="Wrap" />

                    <TextBlock Text="2. 보관 기간" Foreground="#c6dbff" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,4" />
                    <TextBlock Text="수집된 정보는 관련 법령 및 운영 정책에 따라 최소 6개월간 보관되며, 보관 기간이 경과하거나 관리자가 삭제를 요청하는 경우 안전하게 파기됩니다." Foreground="#dbe6ff" TextWrapping="Wrap" />

                    <TextBlock Text="3. 제3자 제공 및 위탁" Foreground="#c6dbff" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,4" />
                    <TextBlock Text="원칙적으로 제3자에게 제공되지 않습니다. 다만 법령에 따른 요구나 수사기관의 요청이 있는 경우에 한해 최소한의 범위 내에서 제공될 수 있습니다." Foreground="#dbe6ff" TextWrapping="Wrap" />

                    <TextBlock Text="4. 이용자의 권리" Foreground="#c6dbff" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,4" />
                    <TextBlock Text="이용자는 기록 조회, 정정, 삭제를 요청할 수 있으며, 동의를 거부할 수 있습니다. 다만 동의를 거부하는 경우 공용 PC 사용이 제한될 수 있습니다." Foreground="#dbe6ff" TextWrapping="Wrap" />

                    <TextBlock Text="5. 보안 조치" Foreground="#c6dbff" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,4" />
                    <TextBlock Text="기록은 암호화된 저장소에 보관되며, 접근 권한이 제한된 관리자만 확인할 수 있습니다. 모든 접속 및 변경 이력은 감사 목적으로 별도 기록됩니다." Foreground="#dbe6ff" TextWrapping="Wrap" />

                    <TextBlock Text="6. 문의처" Foreground="#c6dbff" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,4" />
                    <TextBlock Text="사용 기록 및 개인정보 처리에 관한 문의는 현장 관리자에게 요청해 주십시오." Foreground="#dbe6ff" TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="동의합니다" Width="100" Padding="10,8" Click="OnClose" Background="#4fb36a" Foreground="#0c1b0d" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>