<!-- File: PublicPCControl.Client/Views/AdminPasswordChangeWindow.xaml -->
<Window x:Class="PublicPCControl.Client.Views.AdminPasswordChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="관리자 비밀번호 변경" Height="430" Width="440"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Background="#141824">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="새로운 관리자 비밀번호를 설정하세요." Foreground="#f4f7ff" FontSize="17" FontWeight="SemiBold" Margin="0,0,0,12" />
            <Border Background="#101522" BorderBrush="#25314a" BorderThickness="1" CornerRadius="10" Padding="12" Margin="0,0,0,10">
                <TextBlock Text="기존 비밀번호 대신 사용할 새 비밀번호를 입력합니다. 변경 후에는 새 비밀번호로만 관리자 화면에 진입할 수 있습니다." Foreground="#cdd7ef" TextWrapping="Wrap" />
            </Border>
            <StackPanel>
                <TextBlock Text="새 비밀번호" Foreground="#e8efff" Margin="0,0,0,4" />
                <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="15" Background="#0f1421" Foreground="#f7fbff" BorderBrush="#4fb36a" />
            </StackPanel>
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="새 비밀번호 확인" Foreground="#e8efff" Margin="0,0,0,4" />
                <PasswordBox x:Name="ConfirmPasswordBox" Padding="10" FontSize="15" Background="#0f1421" Foreground="#f7fbff" BorderBrush="#4fb36a" />
            </StackPanel>
            <TextBlock x:Name="ErrorMessage" Foreground="#ffb3b3" Margin="0,10,0,0" Visibility="Collapsed" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="확인" Width="90" Margin="0,0,8,0" Padding="10,8" Click="OnConfirm" Background="#4fb36a" Foreground="#0d1b0f" FontWeight="Bold" />
            <Button Content="취소" Width="90" Padding="10,8" Click="OnCancel" Background="#1f2a3d" Foreground="#f4f7ff" />
        </StackPanel>
    </Grid>
</Window>
