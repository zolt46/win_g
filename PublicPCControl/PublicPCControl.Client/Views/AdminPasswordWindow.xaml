<!-- File: PublicPCControl.Client/Views/AdminPasswordWindow.xaml -->
<Window x:Class="PublicPCControl.Client.Views.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="관리자 인증" Height="200" Width="360"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Background="#1f1f1f">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="관리자 비밀번호를 입력해 주세요." Foreground="White" FontSize="16" Margin="0,0,0,12" />
            <PasswordBox x:Name="PasswordInput" Padding="10" FontSize="14" Background="#2b2b2b" Foreground="White"
                         BorderBrush="#4caf50" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="확인" Width="80" Margin="0,0,8,0" Padding="8,6"
                    Click="OnConfirm" Background="#4caf50" Foreground="White" />
            <Button Content="취소" Width="80" Padding="8,6" Click="OnCancel" />
        </StackPanel>
    </Grid>
</Window>