<!-- File: PublicPCControl.Client/App.xaml -->
<Application x:Class="PublicPCControl.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:PublicPCControl.Client.Views"
             xmlns:viewModels="clr-namespace:PublicPCControl.Client.ViewModels"
             xmlns:conv="clr-namespace:PublicPCControl.Client.Resources"
             Startup="OnStartup">
    <Application.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <DataTemplate DataType="{x:Type viewModels:LockScreenViewModel}">
            <views:LockScreenView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:UserLoginViewModel}">
            <views:UserLoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SessionViewModel}">
            <views:SessionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AdminViewModel}">
            <views:AdminView />
        </DataTemplate>
    </Application.Resources>
</Application>