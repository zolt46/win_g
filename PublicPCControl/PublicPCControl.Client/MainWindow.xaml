<!-- File: PublicPCControl.Client/MainWindow.xaml -->
<Window x:Class="PublicPCControl.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Public PC Control" WindowStyle="None" WindowState="Maximized"
        Topmost="True" ResizeMode="NoResize" Background="#111"
        ShowInTaskbar="True">
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />

        <!-- 기본 뷰 모델이 null이거나 DataTemplate 매칭이 실패했을 때 안내 오버레이 -->
        <Border Background="#AA000000" Visibility="{Binding CurrentViewModel, Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="잠금 화면을 불러오는 중입니다." Foreground="White" FontSize="20" Margin="0,0,0,8" TextAlignment="Center" />
                <TextBlock Text="화면이 계속 비어있다면 config.json 또는 DB 초기화 과정에서 오류가 발생했는지 확인하세요." Foreground="LightGray" TextWrapping="Wrap" Width="420" TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Window>