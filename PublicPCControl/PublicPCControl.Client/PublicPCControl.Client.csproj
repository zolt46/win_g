<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Platforms>x86;x64</Platforms>
    <ApplicationIcon />
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <EnableDefaultApplicationDefinition>false</EnableDefaultApplicationDefinition>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
  </PropertyGroup>

  <ItemGroup>
    <ApplicationDefinition Include="App.xaml" />
    <Page Include="MainWindow.xaml" />
    <Page Include="Views\AdminView.xaml" />
    <Page Include="Views\AdminPasswordWindow.xaml" />
    <Page Include="Views\AdminPasswordChangeWindow.xaml" />
    <Page Include="Views\AdminPasswordSetupWindow.xaml" />
    <Page Include="Views\ConsentDetailsWindow.xaml" />
    <Page Include="Views\AdminMaintenanceWindow.xaml" />
    <Page Include="Views\LockScreenView.xaml" />
    <Page Include="Views\SessionView.xaml" />
    <Page Include="Views\UserLoginView.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="7.0.0" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
  </ItemGroup>

</Project>
